{
  "name": "my-bridges-app",
  "version": "0.1.0",
  "description": "Auto-generated Bridges Node.js application",
  "scripts": {
    "test": "mocha --compilers=js:babel/register test/**/*.js",
    "prestart": "docker build -t rippled-rpm-builder rpm-builder/ && docker build -t rippled-rpm-deployer rpm-deployer/ && docker build -t rippled-rpm-tester rpm-tester/",
    "start": "babel-node config/bridges.js",
    "rpm-builder:setup": "docker build -t rippled-rpm-builder rpm-builder/",
    "rpm-deployer:setup": "docker build -t rippled-rpm-deployer rpm-deployer/",
    "rpm-tester:setup": "docker build -t rippled-rpm-tester rpm-tester/",
    "ansible:deploy:staging": "cd ansible && ansible-playbook -i ansible/hosts -l staging --extra-vars='@ansible/vault.yml' --ask-vault-pass ansible/bot.yml"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "aws-sdk": "^2.2.5",
    "babel": "^5.1.10",
    "babel-runtime": "^5.8.24",
    "bluebird": "^2.9.25",
    "body-parser": "^1.10.0",
    "bookshelf": "^0.7.9",
    "bridges": "0.3.0",
    "bridges-application": "^0.2.1",
    "bridges-express": "^0.3.1",
    "express": "^4.10.5",
    "knex": "^0.7.3",
    "lodash": "^2.4.1",
    "nconf": "^0.7.1",
    "passport": "^0.2.1",
    "pg": "^4.1.0",
    "require-all-to-camel": "^1.0.0",
    "sqlite3": "^3.0.4",
    "supertest": "^1.1.0",
    "winston": "^0.8.3"
  },
  "devDependencies": {
    "chai": "^1.10.0",
    "sinon": "^1.12.1",
    "supertest": "^0.15.0",
    "mocha": "^2.0.1",
    "jshint": "^2.5.10",
    "istanbul": "^0.3.5",
    "coveralls": "^2.11.2"
  }
}
